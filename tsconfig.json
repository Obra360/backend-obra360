{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",                         // ESM compatible
    "lib": ["ES2022"],
    "moduleResolution": "Node",                 // Recomendado para ESM
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "sourceMap": true,
    "removeComments": true,
    "noEmitOnError": true,
    "allowJs": false                             // ⛔️ NO compiles JS si trabajás solo con .ts
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}
